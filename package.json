{
  "name": "@sketchbook-js/sketchbook",
  "version": "0.2.0-1",
  "description": "The design tool that lives in your repo.",
  "repository": "https://github.com/sketchbook-js/sketchbook.git",
  "keywords": [
    "design",
    "tool",
    "graphic"
  ],
  "main": "cli/index.js",
  "contributors": [
    {
      "name": "Haydn Ewers",
      "url": "https://particlesystem.com/"
    },
    {
      "name": "Michael Tran",
      "url": "https://github.com/Mxchaeltrxn"
    }
  ],
  "license": "MIT",
  "bugs": "https://github.com/sketchbook-js/sketchbook/issues",
  "homepage": "https://github.com/sketchbook-js/sketchbook#readme",
  "bin": {
    "sketchbook": "cli/index.js"
  },
  "scripts": {
    "build": "node scripts/build",
    "eslint:fix": "eslint --fix cli/**/*.js src/**/*.js",
    "eslint": "eslint cli/**/*.js src/**/*.js",
    "jest:watch": "jest --watchAll",
    "jest": "jest",
    "start": "node scripts/start",
    "release": "np",
    "test": "yarn eslint && yarn flow check && yarn jest"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build",
    "cli"
  ],
  "dependencies": {
    "arg": "^4.1.3",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.0",
    "react": "^16.12.0",
    "react-beautiful-dnd": "^12.2.0",
    "react-dom": "^16.12.0",
    "set-fns": "0.0.2",
    "styled-jsx": "^3.2.4",
    "use-state-snapshots": "^0.0.3",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-numeric-separator": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-flow": "^7.9.0",
    "@babel/preset-react": "^7.8.3",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "chalk": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "flow-bin": "^0.123.0",
    "jest": "^25.1.0",
    "jest-environment-jsdom-fourteen": "^1.0.1",
    "jest-watch-typeahead": "^0.4.2",
    "np": "^7.0.0",
    "prettier": "^1.19.1",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "targets": "last 2 chrome versions"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-numeric-separator",
      "styled-jsx/babel",
      "transform-flow-strip-types"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "overrides": [
      {
        "files": [
          "cli/index.js",
          "src/canvas/index.js",
          "src/canvas/Layer.js",
          "src/canvas/useEditorConnection.js",
          "src/Editor.js",
          "src/editor/exampleDoc.js",
          "src/editor/useCanvasConnection.js",
          "src/index.js",
          "src/layers.js",
          "src/layers.test.js",
          "src/pushID.js",
          "src/reorder.js",
          "src/reorder.test.js",
          "src/types/types.js",
          "src/useKeys.js"
        ],
        "options": {
          "trailingComma": "none",
          "arrowParens": "avoid"
        }
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**.js"
    ],
    "testMatch": [
      "<rootDir>/src/**.test.js"
    ],
    "testEnvironment": "jest-environment-jsdom-fourteen",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.js$"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  }
}
